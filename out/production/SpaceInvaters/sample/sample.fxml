<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<GridPane stylesheets="@style.css" styleClass="background" fx:id="pane" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" prefHeight="400.0" prefWidth="600.0" >
    <VBox>
        <Button styleClass="record-sales" text="Start Game" GridPane.rowIndex="0" onMouseClicked="#startGame"/>
        <Button styleClass="record-sales" text="User Menu" GridPane.rowIndex="1" onMouseClicked="#openUserWindow"/>
        <Button styleClass="record-sales" text="Score Board" GridPane.rowIndex="2" onMouseClicked="#showScoreBoard"/>
    </VBox>
</GridPane>